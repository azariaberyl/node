// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sample {
  id   String @id
  name String
}

model Customer {
  id      String    @id
  name    String
  email   String    @unique
  phone   String    @unique
  wallet  Wallet?
  comment Comment[]
  likes   Like[]

  @@map("customers")
}

model Wallet {
  id          Int      @id
  balance     Float
  customer_id String   @unique
  customer    Customer @relation(fields: [customer_id], references: [id])

  @@map("wallet")
}

model Comment {
  id          String   @id
  customer_id String
  title       String
  description String
  customer    Customer @relation(fields: [customer_id], references: [id])

  @@map("comments")
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  stock    Int
  category String
  likedBy  Like[]

  @@map("products") // Optional: Use this if your table name differs from the model name
}

model Like {
  customer_id String
  product_id  Int
  Customer    Customer @relation(fields: [customer_id], references: [id])
  Product     Product  @relation(fields: [product_id], references: [id])

  @@id([customer_id, product_id])
  @@map("likes")
}
